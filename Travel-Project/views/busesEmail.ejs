  <body>
    <div style="width: 100%; padding: 5px">
      <p>Hi, <%= name %>. Your Booking is Confirmed.</p>

      <div style="width: 100%; padding: 5px">
        <div
          style="border: 2px solid #bdbcbc; border-radius: 10px; padding: 12px"
        >
          <div class="mail-flights-content-inner-container">
            <p
              style="
                font-family: Roboto;
                font-weight: 600;
                color: #000000;
                font-size: 16px;
              "
            >
              Order Id:
              <span style="font-weight: 500; font-size: 18px"><%= id %></span>
            </p>
            <p
              style="
                font-family: Roboto;
                font-weight: 600;
                color: #000000;
                font-size: 16px;
              "
            >
              Ticket Number:
              <span style="font-weight: 500; font-size: 18px"
                ><%= ticketNumber %></span
              >
            </p>
            <p
              style="
                font-family: Roboto;
                font-weight: 600;
                color: #000000;
                font-size: 16px;
              "
            >
              Amount Paid:
              <span style="font-weight: 500; font-size: 18px"
                ><%= amount %></span
              >
            </p>
            <p
              style="
                font-family: Roboto;
                font-weight: 600;
                color: #000000;
                font-size: 16px;
              "
            >
              Departure At:
              <span style="font-weight: 500; font-size: 18px"
                ><%= departure %></span
              >
            </p>
            <p
              style="
                font-family: Roboto;
                font-weight: 600;
                color: #000000;
                font-size: 16px;
              "
            >
              Destination:
              <span style="font-weight: 500; font-size: 18px">
                <%= destination %>
              </span>
            </p>
            <p
              style="
                font-family: Roboto;
                font-weight: 600;
                color: #000000;
                font-size: 16px;
              "
            >
              Service Number:
              <span style="font-weight: 500; font-size: 18px">
                <%= serviceNumber %>
              </span>
            </p>
          </div>
          <div id="mail-flights-content-inner-container">
            <div style="display: flex; align-items: center">
              <img
                style="width: 40px; margin-right: 6px"
                alt="provider logo"
                src="<%= providerLogo %>"
              />
              <h5
                style="
                  font-family: Roboto;
                  font-size: 18px;
                  color: #242424;
                  font-weight: 600;
                "
              >
                <%= busProviderName %>
              </h5>
            </div>
            <p
              style="
                font-family: Roboto;
                font-weight: 600;
                color: #000000;
                font-size: 16px;
              "
            >
              Departure Time:
              <span style="font-weight: 500; font-size: 18px">
                <%= departureTime %>
              </span>
            </p>
            <p
              style="
                font-family: Roboto;
                font-weight: 600;
                color: #000000;
                font-size: 16px;
              "
            >
              Arrival Time:
              <span style="font-weight: 500; font-size: 18px">
                <%= arrivalTime %>
              </span>
            </p>
            <p
              style="
                font-family: Roboto;
                font-weight: 600;
                color: #000000;
                font-size: 16px;
              "
            >
              Seats:
              <span style="font-weight: 500; font-size: 18px"
                ><%= seats %></span
              >
            </p>
          </div>
          <div>
            <img
              src="data:image/png;base64,<%= barcode %>"
              alt="barcode"
              style="width: 80%; min-width: 100px; max-width: 300px"
            />
          </div>
        </div>
      </div>
      <div style="width: 100%; padding: 5px">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Gender</th>
              <th scope="col">Age</th>
            </tr>
          </thead>
          <tbody>
            <% passengerDetails.map((item, index) => { %>
            <tr>
              <td><%= item.travellerName %></td>
              <td><%= item.gender %></td>
              <td><%= item.age %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
